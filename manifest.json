{
  "manifest_version": 3,
  "name": "Office Ninja Pro",
  "version": "3.2",
  "description": "Premium screen dimmer & privacy tool with tab disguise, decoy tabs, floating widget, and stealth mode.",
  "permissions": ["activeTab", "scripting", "storage"],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "commands": {
    "toggle-stealth": {
      "suggested_key": {
        "default": "Alt+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Toggle Stealth Mode"
    },
    "boss-key": {
      "suggested_key": {
        "default": "Alt+Shift+B",
        "mac": "Command+Shift+B"
      },
      "description": "Boss Key - Open Safe Tab"
    }
  },
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["utils/storage.js", "content/content.js"],
      "css": ["content/widget.css"],
      "run_at": "document_end"
    }
  ],
  "options_page": "options/options.html",
  "web_accessible_resources": [
    {
      "resources": ["content/widget.css"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}